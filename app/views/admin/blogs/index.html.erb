<div>
  <strong>
    <h1 class="page-title">ブログ記事一覧</h1>
  </strong>

  <div id="blog-table-alerts">
    <%= render "blocks/alerts" %>
  </div>

  <div class="row">
    <div class="col-md-12 ">
      <div class="col-md-12 ">
        <div class="form-group">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">カテゴリ</h3>
            </div>
            <div class="panel-body">
              <%= search_form_for @q, url: admin_blogs_path,  html: {method: :get} do |f| %>
                <div class="form-group">
                  <div class="col-lg-2">
                    <label class= "control-label">タイトル</label>
                    <%= f.search_field :title_cont, class:"form-control" %>
                  </div>
                  <div class="col-lg-2">
                    <label>カテゴリ</label>
                    <%= f.select :category_id_eq,
                      options_for_select(Category.all.map{|s|[s.name, s.id]}, params[:q].nil? ? "" : params[:q][:category_id_eq]),
                      {include_blank: true, default: nil}, class: "form-control" %>
                  </div>

                  <div class="col-lg-2">
                    <label>公開 / 非公開:</label>
                    <%= f.select :public_status_eq,
                      options_for_select(Blog.public_statuses.map{|s| s}, params[:q].nil? ? "" : params[:q][:public_status_eq]),
                      {include_blank: true, default: nil}, class: "form-control" %>
                  </div>

                  <div class="col-lg-2">
                    <label>オススメ:</label>
                    <%= f.select :suggest_status_eq,
                      options_for_select(Blog.suggest_statuses.map{|s| s}, params[:q].nil? ? "" : params[:q][:suggest_status_eq]),
                      {include_blank: true, default: nil},  class: "form-control" %>
                  </div>
                  <div class="col-lg-2">
                    <label>並べ替え:</label>
                    <%= select_tag :sort_by, options_for_select([["オススメ", "ASC"],["非オススメ", "DESC"]], params[:sort_by]),
                      {include_blank: true, default: nil, class: "form-control"}%>
                  </div>
                  <div class="col-lg-1">
                    <br />
                    <div class="btn-group">
                      <%= submit_tag "更新", class: "btn btn-default"  %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group" style="padding-left: 50px">
        <%= paginate @blogs, theme: 'twitter-bootstrap-3' %>
      </div>
      <div class="col-sm-12" id="blog-table">
        <%= render 'blog_table' %>
      </div>
      <div class="form-group" style="padding-left: 50px">
        <%= paginate @blogs, theme: 'twitter-bootstrap-3' %>
      </div>
    </div>
  </div>
</div>
