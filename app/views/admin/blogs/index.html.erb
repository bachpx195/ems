<div>
  <strong>
    <h1 class="page-title">ブログ記事一覧</h1>
  </strong>

  <div id="blog-table-alerts">
    <%= render "blocks/alerts" %>
  </div>

  <div class="row">
    <div class="col-md-12 ">
      <div class="col-md-12 ">
        <div class="form-group">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">カテゴリ</h3>
            </div>
            <div class="panel-body">
              <%= search_form_for @q, url: admin_blogs_path,  html: {method: :get} do |f| %>
                <div class="form-group">
                  <div class="col-lg-2">
                    <label class= "control-label">タイトル</label>
                    <%= f.search_field :title_cont, class:"form-control" %>
                  </div>
<% if false%>
                  <div class="col-lg-2">
                    <label>カテゴリ</label>
                    <%= select_tag :category, options_for_select(Category.all.map{|s|[s.name, s.id]}),
                      {:include_blank => true, :default => nil, class: "form-control"} %>
                  </div>

                  <div class="col-lg-2">
                    <label>公開 / 非公開:</label>
                    <%= select_tag :isPublic, options_for_select(Blog.public_statuses.map{|s| s}),
                      {:include_blank => true, :default => nil, class: "form-control"} %>
                  </div>

                  <div class="col-lg-2">
                    <label>オススメ:</label>
                    <%= select_tag :isSuggest, options_for_select(Blog.suggest_statuses.map{|s| s}),
                      {:include_blank => true, :default => nil, class: "form-control"} %>
                  </div>

                  <div class="col-lg-2">
                    <label>並べ替え:</label>
                    <%= select_tag :isSort, options_for_select([["オススメ"],["非オススメ"]]),
                      {:include_blank => true, :default => nil, class: "form-control"}%>
                  </div>
<% end %>
                  <div class="col-lg-1">
                    <br />
                    <div class="btn-group">
                      <%= submit_tag "更新", class: "btn btn-default"  %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group" style="padding-left: 50px">
        <%= paginate @blogs, theme: 'twitter-bootstrap-3' %>
      </div>
      <div class="col-sm-12" id="blog-table">
        <%= render 'blog_table' %>
      </div>
      <div class="form-group" style="padding-left: 50px">
        <%= paginate @blogs, theme: 'twitter-bootstrap-3' %>
      </div>
    </div>
  </div>
</div>
