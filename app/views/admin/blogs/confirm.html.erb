<strong>
  <h1 class="page-title">確認</h1>
</strong>

<div class="row">
  <div class="col-md-12 ">
    <div class="row">
      <div class="col-md-12 col-lg-10 col-lg-offset-1">
        <div class="portlet-body form">
          <div class="form-horizontal">
            <div class="form-group">
              <span class="col-sm-1 btn btn-primary nohover" id=title"><%= t "admin.blog.create.form.title" %></span>
              <div class="col-sm-11">
                <div class="col-sm-6">
                  <h4 class=form-control"><%= @blog.title %></h4>
                </div>
              </div>
            </div>

            <div class="form-group">
              <span class="col-sm-1 btn btn-primary nohover" id=title"><%= t "admin.blog.create.form.category" %></span>
              <div class="col-sm-6">
                <div class="col-sm-11">
                  <h4 class=form-control"><%= @blog.category.name %></h4>
                </div>
              </div>
            </div>

            <div class="form-group">
              <span class="col-sm-1 btn btn-primary nohover" id=title"><%= t "admin.blog.create.form.time" %></span>
              <div class="col-sm-6">
                <div class="col-sm-11">
                  <h4 class=form-control"><%= format_date_in_japan @blog.public_time %></h4>
                </div>
              </div>
            </div>

            <div class="form-group">
              <span for="public_status" class="col-sm-1 btn btn-primary nohover">
                <%= t "admin.blog.create.form.public" %>
              </span>
              <div class="col-sm-6">
                <div class="col-sm-11">
                  <h4 class=form-control"><%= t "admin.blog.search.#{@blog.public_status}" %></h4>
                </div>
              </div>
            </div>

            <div class="form-group">
              <span for="suggest_status" class="col-sm-1 btn btn-primary nohover">
                <%= t "admin.blog.create.form.suggest" %>
              </span>
              <div class="col-sm-6">
                <div class="col-sm-11">
                  <h4 class=form-control"><%= t "admin.blog.search.#{@blog.suggest_status}" %></h4>
                </div>
              </div>
            </div>

            <div class="form-group">
              <span for="intro_image" class="col-sm-1 btn btn-primary nohover long-text">
                <%= t "admin.blog.create.form.intro_image" %>
              </span>
              <div class="col-sm-6">
                <div class="col-sm-11">
                  <div class="image-preview">
                    <%= link_to "#" do %>
                        <%= image_tag @blog.intro_image_url, class: "img-responsive" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-group">
              <span for="content" class="col-sm-1 btn btn-primary nohover">
                <%= t "admin.blog.create.form.content" %>
              </span>
              <div class="col-sm-10">
                <div class="col-sm-11">
                  <div class="scoller"><%= raw @blog.content %></div>
                </div>
              </div>
            </div>

            <h3 class="author-setting-ems"><%= t "admin.blog.create.form.setting_author" %></h3>

            <div class="form-group">
              <span for="author_name" class="col-sm-1 btn btn-primary nohover">
                <%= t "admin.blog.create.form.author_name" %>
              </span>
              <div class="col-sm-6">
                <div class="col-sm-11">
                  <h4 class=form-control"><%= @blog.author_name %></h4>
                </div>
              </div>
            </div>

            <div class="form-group">
              <span for="author_position" class="col-sm-1 btn btn-primary nohover">
                <%= t "admin.blog.create.form.author_position" %>
              </span>
              <div class="col-sm-6">
                <div class="col-sm-11">
                  <h4 class=form-control"><%= @blog.author_position %></h4>
                </div>
              </div>
            </div>

            <div class="form-group">
              <span for="author_age" class="col-sm-1 btn btn-primary nohover">
                <%= t "admin.blog.create.form.author_age" %>
              </span>
              <div class="col-sm-6">
                <div class="col-sm-11">
                  <h4 class=form-control"><%= @blog.author_age %></h4>
                </div>
              </div>
            </div>


            <div class="form-group">
            <span for="intro_image" class="col-sm-1 btn btn-primary nohover long-text">
              <%= t "admin.blog.create.form.author_image" %>
            </span>
            <div class="col-sm-6">
              <div class="col-sm-11">
                <div class="image-preview">
                  <%= link_to "#" do %>
                      <%= image_tag @blog.author_image? ? @blog.author_image_url : Settings.default_upload_icon , class: "img-responsive" %>
                  <% end %>
                </div>
              </div>
            </div>
            </div>

            <div class="form-actions">
              <div class="row">
                <div class="col-sm-offset-4 col-sm-1">
                  <%= link_to t("admin.blog.create.form.back"), edit_admin_blog_path(@blog), class: "btn btn-default" %>
                </div>
                <div class="col-sm-1">
                  <%= link_to t("admin.blog.create.form.save"),
                    confirm_admin_blogs_path(type_action: params[:type]), class: "btn btn-info" %>
                </div>
              </div>
            </div>
          </div>
          </div>
        </div>
    </div>
  </div>
</div>
