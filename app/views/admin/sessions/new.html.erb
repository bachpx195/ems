<head>
  <meta charset="utf-8"/>
  <title>Terminal | Admin Login</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta content="width=device-width, initial-scale=1" name="viewport"/>
  <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all"
        rel="stylesheet" type="text/css"/>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application-admin", media: "all" %>
  <link rel="shortcut icon" href="favicon.ico"/>
</head>
<body class=" login">
<div class="logo">
  <%= link_to admin_session_path do %>
      <%= image_tag "logo.png", class: "logo-login" %>
  <% end %>
</div>
<div class="content">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h3 class="form-title font-green"><%= t "login.title" %></h3>
      <div class="alert alert-danger display-hide">
        <button class="close" data-close="alert"></button>
        <span> Enter any username and password. </span>
      </div>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9"><%= t "login.username" %></label>
        <%= f.text_field :username, autofocus: true,
                         class: "form-control form-control-solid placeholder-no-fix", autocomplete: "off",
                         placeholder: t("login.username") %>
      </div>
      <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9"><%= t "login.password" %></label>
        <%= f.password_field :password,
                             class: "form-control form-control-solid placeholder-no-fix",
                             autocomplete: "off", placeholder: t("login.password") %>
      </div>
      <div class="form-actions">
        <%= f.button t("login.login_btn"), class: "btn green uppercase" %>
      </div>
  <% end %>
</div>
<div class="copyright"> 2017 Â© Terminal. Admin Dashboard.</div>
<%= javascript_include_tag "application-admin" %>
</body>
</html>