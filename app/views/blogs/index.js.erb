<% if params[:type_action].eql?("category") %>
  $("#my-blogs-user").html("<%= j render 'blog' %>");
<% else %>
  $("#my-blogs-user").append("<%= j render "blog" %>");
  <% if params[:category].nil? %>
    $('a.load-more-posts').attr('href', "<%= blogs_path page: @blogs.next_page %>");
  <% else %>
    $('a.load-more-posts').attr('href', "<%= blogs_path page: @blogs.next_page, category: params[:category] %>");
  <% end %>
  <% if @blogs.next_page.nil? %>
    $('a.load-more-posts').remove();
  <% end %>
<% end %>
