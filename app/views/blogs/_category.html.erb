<%=  %>
<script>
  function active(num, category_count) {
      $(".slick-slide").find(".active").removeClass("active");
      if(num == 'root'){
          $("#root").addClass("active");
          $(".menu-bar ul .slick-list").css("margin-left", "-74vw");
      } else if(num == 'suggest'){
          $("#suggest").addClass("active");
          $(".menu-bar ul .slick-list").css("margin-left", "-23vw");
      } else {
          var idNum = "#" + num;
          $(idNum).addClass("active");
          if(num == (category_count - 1)){
            $(".menu-bar ul .slick-list").css("margin-left", "30vw");
          } else if (num == category_count){
              $(".menu-bar ul .slick-list").css("margin-left", "73vw");
          }else {
            $(".menu-bar ul .slick-list").css("margin-left", "-19vw");
          }
      }
  }
</script>